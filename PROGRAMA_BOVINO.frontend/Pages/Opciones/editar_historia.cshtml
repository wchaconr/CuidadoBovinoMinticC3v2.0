                    <input type="hidden" asp-for="Historia.id"/>
                

                        <div class="col-xxl-10 col-xl-10 col-lg-10 col-md-3 col-sm-12" >
                            <label class="_label mb-1" asp-for="Historia.Fecha_Visita" >Fecha de la Visita</label>
