                            <span asp-validation-for="Historia.Fecha_Visita"></span>
                        </div>
                        <div class="col-xxl-2 col-xl-2 col-lg-2 col-md-3 col-sm-12" >
                            <label class="_label mb-1" asp-for="Historia.Id_Historia" >Codigo Historia</label>
                            <input  class="form-control1 -sm col-3" asp-for="Historia.Id_Historia"  >
                            <span asp-validation-for="Historia.Id_Historia"></span>
                        </div>
                        
                
                    <br>
                
                <div class="">
                        <div class="row d-flex justify-content-end">
                            <div class="col-4">
                            <label class="_label mb-1" asp-for="Historia.Id_Vaca">Codigo del Bovino</label>
                            <input asp-for="Historia.Id_Vaca" >
                            <span asp-validation-for="Historia.Id_Vaca"></span>
                        </div>
                            <div class="col-4">
                            <label class="_label mb-1" asp-for="Historia.Id_Veterinario">Codigo del Veterinario</label>
                            <input asp-for="Historia.Id_Veterinario" >
                            <span asp-validation-for="Historia.Id_Veterinario"></span>
                        </div>
                            <div class="col-4">
                            <label class="_label mb-1" asp-for="Historia.Temperatura">Temperatura del Bovino</label>
                            <input asp-for="Historia.Temperatura" >
                            <span asp-validation-for="Historia.Temperatura"></span>
                            </div>
                        </div>
                    </div>
                    <div class="" >
                        <div class="row">
                            <div class="col-4" style="position:relative">
                            <label class="_label mb-1" asp-for="Historia.Peso">Peso del Bovino</label>
                            <input asp-for="Historia.Peso" >
                            <span asp-validation-for="Historia.Peso"></span>
                            </div>
                            <div class="col-4" style="position:relative">
                            <label class="_label mb-1" asp-for="Historia.Frecuencia_Respiratoria">Frecuencia Respiratoria del Bovino</label>
                            <input asp-for="Historia.Frecuencia_Respiratoria" >
                            <span asp-validation-for="Historia.Frecuencia_Respiratoria"></span>
                            </div>
                            <div class="col-4" style="position:relative">
                            <label class="_label mb-1" asp-for="Historia.Frecuencia_Cardiaca">Frecuencia Cardiaca del Bovino</label>
                            <input asp-for="Historia.Frecuencia_Cardiaca" >
                            <span asp-validation-for="Historia.Frecuencia_Cardiaca"></span>
                            </div>
                        </div>
                        
                    </div>



                    <div class="row" >
                        <div class="col-xxl-12 col-xl-12 col-lg-12 col-md-12 col-sm-12">
                            <label class="_label mb-1" asp-for="Historia.Diagnostico">Diagnostico</label>
                            <div class="input-group mb-2" >
                            <textarea asp-for="Historia.Diagnostico" class="form-control3" id="txtMedicamentos"  rows="3" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="Historia.Diagnostico"></span>
                            </div>
                            <label class="_label mb-1" asp-for="Historia.Recomendaciones">Recomendaciones</label>
                            <div class="input-group mb-2" >
                            <textarea asp-for="Historia.Recomendaciones" class="form-control3" id="txtMedicamentos"  rows="3" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="Historia.Recomendaciones"></span>
                            </div>
                            <label class="_label mb-1" asp-for="Historia.Medicamentos">Medicamentos</label>
                            <div class="input-group mb-2" >
                            <textarea asp-for="Historia.Medicamentos" class="form-control3" id="txtMedicamentos"  rows="3" class="form-control form-control-sm"></textarea>
                            <span asp-validation-for="Historia.Medicamentos"></span>
                            </div>
                            
                        
                        
                            <button type="submit" class="btn_save"><img src="https://cdn.icon-icons.com/icons2/412/PNG/128/DocumentEdit_40924.png"width="30" /> Editar Historia Clinica</button>
                        </div>
                    </div>
                </div>
            </div>
            </form>



        </section>

